{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "AWS": [
          "${registry_iam_role_arn}"
        ]
      },
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "s3:ListBucketMultipartUploads"
      ],
      "Resource": "arn:aws:s3:::${env}-${cluster_id}-registry.${dns_zone_name}"
    },
    {
      "Effect": "Allow",
      "Principal": {
        "AWS": [
          "${registry_iam_role_arn}"
        ]
      },
      "Action": [
        "s3:PutObject",
        "s3:GetObject",
        "s3:DeleteObject",
        "s3:ListMultipartUploadParts",
        "s3:AbortMultipartUpload"
      ],
      "Resource": "arn:aws:s3:::${env}-${cluster_id}-registry.${dns_zone_name}/*"
    }
  ]
}
